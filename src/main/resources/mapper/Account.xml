<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.phoebe.youtiao.dao.api.AccountDao">
    <resultMap id="BaseResultMap" type="accountEntity">
        <id column="id" property="id"/>
        <result column="account" property="account"/>
        <result column="password" property="password"/>
        <result column="status" property="status"/>
        <result column="open_history" property="openHistory"/>
        <result column="create_time" property="createTime"/>
        <result column="last_modify_time" property="lastModifyTime"/>
        <result column="name" property="name"/>
        <result column="real_name" property="realName"/>
        <result column="phone" property="phone"/>
        <result column="signature" property="signature"/>
        <result column="avatar_fpath" property="avatarFPath"/>

    </resultMap>

    <insert id="addAccount" parameterType="accountEntity">
        INSERT INTO account(
        `id`,
        `account`,
        `password`,
        `status`,
        `open_history`,
        `create_time`,
        `last_modify_time`,
        `signature`,
        `phone`,
        `real_name`,
        `name`,
        `avatar_fpath`
        )
        VALUES (
        #{id},
        #{account},
        #{password},
        #{status},
        #{openHistory},
        now(),
        now(),
        #{signature},
        #{phone},
        #{realName},
        #{name},
        #{avatarFPath}
        )
    </insert>

    <update id="updateAccount" parameterType="accountEntity">
        UPDATE account
        <set>
            <if test="account != null">
                `account` = #{account},
            </if>
            <if test="password != null">
            `password` = #{password},
            </if>
            <if test="status != null">
                `status` = #{status},
            </if>
            <if test="openHistory != null">
                `open_history` = #{openHistory},
            </if>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="realName != null">
                `real_name` = #{realName},
            </if>
            <if test="signature != null">
                `signature` = #{signature},
            </if>
            <if test="phone != null">
                `phone` = #{phone},
            </if>
            <if test="avatarFPath != null">
                `avatar_fpath` = #{avatarFPath},
            </if>
            `last_modify_time` = now()
        </set>
        WHERE `id` = #{id}
    </update>

    <select id="queryAccountById" parameterType="map" resultMap="BaseResultMap">
        SELECT *
        FROM account
        WHERE id = #{id}
    </select>
    <select id="queryAccountByAccountAndPassword" parameterType="map" resultType="Integer">
        SELECT count(*)
        FROM account
        WHERE account = #{account} and password = #{password}
    </select>

    <delete id="deleteAccountById" parameterType="map">
        DELETE FROM account WHERE id=#{id}
    </delete>

</mapper>